<%= form_with model: @task do |f| %>
  <%= f.label :title, class:"form-label" %>
  <%= f.text_field :title, class:"form-control w-25" %>
  <%= f.label :details, class:"form-label" %>
  <%= f.text_field :details, class:"form-control w-25" %>
  <%= f.submit %>
<% end %>

<%= link_to fa_icon("rotate-left", text:"Back to list"), tasks_path, class:"text-decoration-none" %>
