<div class="container pt-2">

  <h1>My Tasks</h1>

  <div class="border-bottom py-3">
    <% @tasks.each do |task| %>
      <div class="my-1"><%= link_to fa_icon(task.completed ? 'square-check' : "square", text:task.title), task_path(task.id), class:"text-decoration-none" %> --
      <%= link_to fa_icon('far trash-can'),
      task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></div>
    <% end %>
  </div>

  <div class="py-3">
    <%= link_to fa_icon('plus', text:'Add a new task'), new_task_path, class:"text-decoration-none" %>
  </div>
</div>

<%# Exemple de Fred %>
